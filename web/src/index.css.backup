@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  /* Clean, compact typography */
  html {
    font-family: 'Inter', ui-sans-serif, system-ui, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  body {
    @apply bg-gray-50 text-gray-900 leading-normal;
    @apply min-h-screen;
  }

  /* Compact heading styles */
  h1 {
    @apply text-2xl font-semibold text-gray-900 tracking-tight;
  }
  
  h2 {
    @apply text-xl font-medium text-gray-800;
  }
  
  h3 {
    @apply text-lg font-medium text-gray-700;
  }
}

@layer components {
  /* Clean card design */
  .card {
    @apply bg-white border border-gray-200 rounded-lg shadow-sm;
    @apply transition-shadow duration-200;
  }
  
  .card:hover {
    @apply shadow-md;
  }

  /* Professional button system */
  .btn {
    @apply inline-flex items-center justify-center px-4 py-2 text-sm font-medium rounded-md;
    @apply transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2;
    @apply disabled:opacity-50 disabled:cursor-not-allowed;
  }

  /* Primary button - professional blue */
  .btn-primary {
    @apply btn bg-blue-600 text-white hover:bg-blue-700 focus:ring-blue-500;
  }

  /* Secondary button - clean gray */
  .btn-secondary {
    @apply btn bg-gray-100 text-gray-700 hover:bg-gray-200 focus:ring-gray-500;
    @apply border border-gray-300;
  }

  /* Danger button - subtle red */
  .btn-danger {
    @apply btn bg-red-600 text-white hover:bg-red-700 focus:ring-red-500;
  }

  /* Success button - professional green */
  .btn-success {
    @apply btn bg-green-600 text-white hover:bg-green-700 focus:ring-green-500;
  }

  /* Small button variant */
  .btn-sm {
    @apply px-3 py-1.5 text-xs;
  }

  /* Large button variant */
  .btn-lg {
    @apply px-6 py-3 text-base;
  }

  /* Input fields */
  .input {
    @apply block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm;
    @apply focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500;
    @apply disabled:bg-gray-50 disabled:text-gray-500;
  }

  /* Select fields */
  .select {
    @apply input appearance-none bg-white;
    @apply bg-no-repeat bg-right pr-10;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='m6 8 4 4 4-4'/%3e%3c/svg%3e");
    background-position: right 0.5rem center;
    background-size: 1.5em 1.5em;
  }

  /* Labels */
  .label {
    @apply block text-sm font-medium text-gray-700 mb-1;
  }

  /* Table styles */
  .table {
    @apply min-w-full divide-y divide-gray-200;
  }

  .table th {
    @apply px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider;
    @apply bg-gray-50;
  }

  .table td {
    @apply px-4 py-3 whitespace-nowrap text-sm text-gray-900;
  }

  .table tbody tr {
    @apply border-b border-gray-200 hover:bg-gray-50;
  }

  /* Status badges */
  .badge {
    @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
  }

  .badge-primary {
    @apply bg-blue-100 text-blue-800;
  }

  .badge-success {
    @apply bg-green-100 text-green-800;
  }

  .badge-warning {
    @apply bg-yellow-100 text-yellow-800;
  }

  .badge-danger {
    @apply bg-red-100 text-red-800;
  }

  .badge-gray {
    @apply bg-gray-100 text-gray-800;
  }

  /* Page layout */
  .page-header {
    @apply mb-6;
  }

  .page-title {
    @apply text-2xl font-semibold text-gray-900 mb-1;
  }

  .page-subtitle {
    @apply text-sm text-gray-600;
  }

  /* Loading spinner */
  .spinner {
    @apply animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600;
  }

  /* Alert messages */
  .alert {
    @apply p-4 rounded-md mb-4;
  }

  .alert-error {
    @apply bg-red-50 border border-red-200 text-red-800;
  }

  .alert-success {
    @apply bg-green-50 border border-green-200 text-green-800;
  }

  .alert-info {
    @apply bg-blue-50 border border-blue-200 text-blue-800;
  }

  .alert-warning {
    @apply bg-yellow-50 border border-yellow-200 text-yellow-800;
  }
}

  .dark .btn-secondary {
    @apply bg-secondary-700 text-secondary-200 border-secondary-600;
    @apply hover:bg-secondary-600;
  }

  /* Success Button */
  .btn-success {
    @apply btn-base bg-success-600 text-white;
    @apply hover:bg-success-700 focus:ring-success-500;
    @apply shadow-soft hover:shadow-medium;
  }

  /* Warning Button */
  .btn-warning {
    @apply btn-base bg-warning-500 text-white;
    @apply hover:bg-warning-600 focus:ring-warning-500;
    @apply shadow-soft hover:shadow-medium;
  }

  /* Danger Button */
  .btn-danger {
    @apply btn-base bg-danger-600 text-white;
    @apply hover:bg-danger-700 focus:ring-danger-500;
    @apply shadow-soft hover:shadow-medium;
  }

  /* Professional Input Fields */
  .input-field {
    @apply w-full px-4 py-3 rounded-xl border border-secondary-300;
    @apply bg-white/50 backdrop-blur-sm;
    @apply text-secondary-900 placeholder-secondary-500;
    @apply transition-all duration-200 ease-out;
    @apply focus:outline-none focus:ring-4 focus:ring-primary-500/20 focus:border-primary-500;
  }

  .dark .input-field {
    @apply bg-secondary-800/50 border-secondary-600 text-secondary-100;
    @apply placeholder-secondary-400;
  }

  /* Professional Select Fields */
  .select-field {
    @apply input-field cursor-pointer;
    @apply bg-white/70;
  }

  .dark .select-field {
    @apply bg-secondary-800/70;
  }

  /* Professional Tables */
  .table-container {
    @apply card overflow-hidden;
  }

  .table-header {
    @apply bg-secondary-50/80 border-b border-secondary-200/50;
    @apply px-6 py-4;
  }

  .dark .table-header {
    @apply bg-secondary-700/50 border-secondary-600/50;
  }

  .table-row {
    @apply border-b border-secondary-100/50 last:border-b-0;
    @apply hover:bg-secondary-50/50 transition-colors duration-150;
  }

  .dark .table-row {
    @apply border-secondary-700/50 hover:bg-secondary-700/30;
  }

  /* Status Badges */
  .badge {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium;
  }

  .badge-success {
    @apply badge bg-success-100 text-success-800 border border-success-200;
  }

  .badge-warning {
    @apply badge bg-warning-100 text-warning-800 border border-warning-200;
  }

  .badge-danger {
    @apply badge bg-danger-100 text-danger-800 border border-danger-200;
  }

  .badge-info {
    @apply badge bg-info-100 text-info-800 border border-info-200;
  }

  .badge-secondary {
    @apply badge bg-secondary-100 text-secondary-800 border border-secondary-200;
  }

  .dark .badge-success {
    @apply bg-success-900/30 text-success-300 border-success-700/50;
  }

  .dark .badge-warning {
    @apply bg-warning-900/30 text-warning-300 border-warning-700/50;
  }

  .dark .badge-danger {
    @apply bg-danger-900/30 text-danger-300 border-danger-700/50;
  }

  .dark .badge-info {
    @apply bg-info-900/30 text-info-300 border-info-700/50;
  }

  .dark .badge-secondary {
    @apply bg-secondary-700/30 text-secondary-300 border-secondary-600/50;
  }

  /* Professional Loading States */
  .loading-skeleton {
    @apply animate-pulse bg-secondary-200 rounded;
  }

  .dark .loading-skeleton {
    @apply bg-secondary-700;
  }

  /* Professional Navigation */
  .nav-item {
    @apply flex items-center px-4 py-3 rounded-xl;
    @apply text-secondary-700 hover:text-primary-600;
    @apply hover:bg-primary-50/50 transition-all duration-200;
    @apply font-medium;
  }

  .nav-item.active {
    @apply bg-primary-100/80 text-primary-700;
    @apply shadow-soft;
  }

  .dark .nav-item {
    @apply text-secondary-300 hover:text-primary-400;
    @apply hover:bg-primary-900/20;
  }

  .dark .nav-item.active {
    @apply bg-primary-900/40 text-primary-300;
  }

  /* Professional Form Groups */
  .form-group {
    @apply space-y-2;
  }

  .form-label {
    @apply block text-sm font-semibold text-secondary-700;
  }

  .dark .form-label {
    @apply text-secondary-300;
  }

  .form-error {
    @apply text-sm text-danger-600 font-medium;
  }

  .dark .form-error {
    @apply text-danger-400;
  }

  /* Professional Modal/Dialog */
  .modal-overlay {
    @apply fixed inset-0 bg-black/50 backdrop-blur-sm z-50;
    @apply flex items-center justify-center p-4;
  }

  .modal-content {
    @apply card max-w-lg w-full max-h-[90vh] overflow-auto;
    @apply transform animate-scale-in;
  }

  /* Professional Breadcrumbs */
  .breadcrumb {
    @apply flex items-center space-x-2 text-sm text-secondary-600;
  }

  .dark .breadcrumb {
    @apply text-secondary-400;
  }

  .breadcrumb-separator {
    @apply text-secondary-400;
  }

  /* Professional Page Headers */
  .page-header {
    @apply mb-8 pb-6 border-b border-secondary-200/50;
  }

  .dark .page-header {
    @apply border-secondary-700/50;
  }

  .page-title {
    @apply text-3xl font-bold text-secondary-900 mb-2;
  }

  .dark .page-title {
    @apply text-secondary-100;
  }

  .page-subtitle {
    @apply text-lg text-secondary-600;
  }

  .dark .page-subtitle {
    @apply text-secondary-400;
  }
}

@layer utilities {
  /* Custom utilities for professional design */
  .glass {
    @apply bg-white/10 backdrop-blur-md border border-white/20;
  }

  .dark .glass {
    @apply bg-white/5 border-white/10;
  }

  .gradient-text {
    @apply bg-gradient-to-r from-primary-600 to-primary-500 bg-clip-text text-transparent;
  }

  .dark .gradient-text {
    @apply from-primary-400 to-primary-300;
  }

  /* Scrollbar styling */
  .custom-scrollbar {
    scrollbar-width: thin;
    scrollbar-color: theme('colors.secondary.400') theme('colors.secondary.100');
  }

  .custom-scrollbar::-webkit-scrollbar {
    width: 6px;
  }

  .custom-scrollbar::-webkit-scrollbar-track {
    background: theme('colors.secondary.100');
    border-radius: 3px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb {
    background: theme('colors.secondary.400');
    border-radius: 3px;
  }

  .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: theme('colors.secondary.500');
  }

  .dark .custom-scrollbar {
    scrollbar-color: theme('colors.secondary.600') theme('colors.secondary.800');
  }

  .dark .custom-scrollbar::-webkit-scrollbar-track {
    background: theme('colors.secondary.800');
  }

  .dark .custom-scrollbar::-webkit-scrollbar-thumb {
    background: theme('colors.secondary.600');
  }

  .dark .custom-scrollbar::-webkit-scrollbar-thumb:hover {
    background: theme('colors.secondary.500');
  }
}

/* Modern Design System for TraceLite */
:root {
  /* Brand Colors - Scientific/Lab Theme */
  --brand-primary: #0ea5e9;
  --brand-secondary: #3b82f6;
  --brand-accent: #10b981;
  --brand-warning: #f59e0b;
  --brand-error: #ef4444;
  --brand-success: #10b981;
  
  /* Neutral Colors */
  --gray-50: #f8fafc;
  --gray-100: #f1f5f9;
  --gray-200: #e2e8f0;
  --gray-300: #cbd5e1;
  --gray-400: #94a3b8;
  --gray-500: #64748b;
  --gray-600: #475569;
  --gray-700: #334155;
  --gray-800: #1e293b;
  --gray-900: #0f172a;
  
  /* Glass Morphism */
  --glass-bg: rgba(255, 255, 255, 0.1);
  --glass-border: rgba(255, 255, 255, 0.2);
  --glass-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  
  /* Border Radius */
  --radius-sm: 0.375rem;
  --radius-md: 0.5rem;
  --radius-lg: 0.75rem;
  --radius-xl: 1rem;
  --radius-2xl: 1.5rem;
  
  /* Transitions */
  --transition-fast: 150ms ease-in-out;
  --transition-normal: 250ms ease-in-out;
  --transition-slow: 400ms ease-in-out;
}

/* Dark Mode Support */
@media (prefers-color-scheme: dark) {
  :root {
    --gray-50: #0f172a;
    --gray-100: #1e293b;
    --gray-200: #334155;
    --gray-300: #475569;
    --gray-400: #64748b;
    --gray-500: #94a3b8;
    --gray-600: #cbd5e1;
    --gray-700: #e2e8f0;
    --gray-800: #f1f5f9;
    --gray-900: #f8fafc;
  }
}

/* Base Styles */
* {
  box-sizing: border-box;
}

html {
  scroll-behavior: smooth;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  line-height: 1.6;
}

/* Custom Component Classes */
@layer components {
  /* Glass Card Component */
  .glass-card {
    @apply bg-white/10 backdrop-blur-md border border-white/20 rounded-2xl shadow-xl;
  }
  
  /* Modern Button Variants */
  .btn-primary {
    @apply bg-gradient-to-r from-blue-500 to-blue-600 text-white px-6 py-3 rounded-xl font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-blue-500/30;
  }
  
  .btn-secondary {
    @apply bg-gradient-to-r from-gray-100 to-gray-200 text-gray-700 px-6 py-3 rounded-xl font-medium shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-gray-500/30;
  }
  
  .btn-accent {
    @apply bg-gradient-to-r from-emerald-500 to-emerald-600 text-white px-6 py-3 rounded-xl font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-emerald-500/30;
  }
  
  .btn-warning {
    @apply bg-gradient-to-r from-amber-500 to-amber-600 text-white px-6 py-3 rounded-xl font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-amber-500/30;
  }
  
  /* Modern Input Fields */
  .input-modern {
    @apply w-full px-4 py-3 bg-white/10 backdrop-blur-md border border-white/20 rounded-xl text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-4 focus:ring-blue-500/30 focus:border-blue-500 transition-all duration-300;
  }
  
  /* Status Badges */
  .badge-success {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-emerald-100 text-emerald-800 ring-1 ring-emerald-500/20;
  }
  
  .badge-warning {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-amber-100 text-amber-800 ring-1 ring-amber-500/20;
  }
  
  .badge-error {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800 ring-1 ring-red-500/20;
  }
  
  .badge-info {
    @apply inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800 ring-1 ring-blue-500/20;
  }
  
  /* Card Styles */
  .card-modern {
    @apply bg-white rounded-2xl shadow-lg p-6 border border-gray-100 hover:shadow-xl transition-all duration-300;
  }
  
  /* Navigation Styles */
  .nav-modern {
    @apply bg-white/95 backdrop-blur-md border-b border-white/20 shadow-lg;
  }
  
  /* Timeline Styles */
  .timeline-item {
    @apply relative pl-8 pb-8 before:absolute before:left-2 before:top-2 before:w-2 before:h-2 before:bg-blue-500 before:rounded-full before:content-[''] after:absolute after:left-2.5 after:top-4 after:w-0.5 after:h-full after:bg-gray-200 after:content-[''];
  }
  
  .timeline-item:last-child::after {
    @apply hidden;
  }
  
  /* Loading Animation */
  .loading-pulse {
    @apply animate-pulse bg-gradient-to-r from-gray-200 via-gray-300 to-gray-200 bg-[length:200%_100%];
    animation: loading-shimmer 2s infinite;
  }
  
  /* Lab Theme Specific */
  .lab-container {
    @apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
  }
  
  .lab-section {
    @apply py-12 lg:py-20;
  }
  
  .lab-heading {
    @apply text-3xl lg:text-4xl font-bold text-gray-900 mb-6;
  }
  
  .lab-subheading {
    @apply text-xl text-gray-600 mb-8;
  }
}

/* Custom Animations */
@keyframes loading-shimmer {
  0% { background-position: -200% 0; }
  100% { background-position: 200% 0; }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.animate-slideInUp {
  animation: slideInUp 0.6s ease-out;
}

.animate-fadeInScale {
  animation: fadeInScale 0.4s ease-out;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background: #f1f5f9;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}

/* Responsive Typography */
@media (max-width: 640px) {
  .lab-heading {
    @apply text-2xl;
  }
  
  .lab-subheading {
    @apply text-lg;
  }
}

/* Focus Visible Improvements */
.focus-visible:focus {
  @apply outline-none ring-4 ring-blue-500/30 ring-offset-2;
}

/* Hover Effects */
.hover-lift {
  @apply transform transition-all duration-300 hover:-translate-y-1 hover:shadow-lg;
}

.hover-scale {
  @apply transform transition-transform duration-300 hover:scale-105;
}